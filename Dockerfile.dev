# Development Dockerfile with additional tools for testing and debugging

FROM nvidia/cuda:12.1.0-devel-ubuntu22.04

ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PIP_NO_CACHE_DIR=1 \
    PYTHONPATH="/app:$PYTHONPATH"

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    python3.10 \
    python3.10-dev \
    python3.10-venv \
    python3-pip \
    build-essential \
    cmake \
    git \
    vim \
    nano \
    htop \
    nvidia-utils \
    # OpenCV dependencies
    libsm6 \
    libxext6 \
    libxrender-dev \
    libgl1-mesa-glx \
    libglib2.0-0 \
    libhdf5-dev \
    libharfbuzz0b \
    libwebp7 \
    libjasper1 \
    libjpeg-turbo8 \
    libpng16-16 \
    libatlas-base-dev \
    libjasper-dev \
    libtiff5 \
    libwebp6 \
    # Development tools
    curl \
    wget \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

# Create virtual environment
RUN python3.10 -m venv /opt/venv
ENV PATH="/opt/venv/bin:$PATH"

# Upgrade pip
RUN pip install --upgrade pip setuptools wheel

# Copy requirements
COPY requirements.txt .

# Install main dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Install development dependencies
RUN pip install --no-cache-dir \
    pytest==7.4.3 \
    pytest-cov==4.1.0 \
    black==23.12.0 \
    flake8==6.1.0 \
    pylint==3.0.3 \
    mypy==1.7.1 \
    ipython==8.18.1 \
    jupyter==1.0.0 \
    jupyterlab==4.0.9 \
    tensorboard==2.15.1 \
    pyzmq==25.1.1

# Create non-root user
RUN useradd -m -u 1000 devuser

WORKDIR /app

# Copy application
COPY --chown=devuser:devuser . .

# Create necessary directories
RUN mkdir -p /app/data /app/output /app/logs /app/tests && \
    chown -R devuser:devuser /app

USER devuser

# Expose ports
EXPOSE 8000 5000 6006 8888

# Default to bash for development
CMD ["/bin/bash"]
